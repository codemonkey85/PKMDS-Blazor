@if (AppState.SaveFile is { Context: { } saveFileEntityContext, Generation: { } saveGeneration, Inventory: { } inventory } saveFile &&
saveFileEntityContext is not
EntityContext.None or
EntityContext.SplitInvalid or
EntityContext.MaxInvalid)
{

    <MudTabs Outlined
             Rounded
             Border>

        @foreach (var pouch in inventory)
        {
            <MudTabPanel Text="@pouch.Type.ToString()">
            </MudTabPanel>
        }

    </MudTabs>
}
